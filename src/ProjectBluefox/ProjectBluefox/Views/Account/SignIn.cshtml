@{
    Layout = @"..\Shared\_Public.cshtml";
}

<div class="container">
    <div class="form">
        <h1>Sign-in</h1>
        <form>
            <div class="form-element" data-name="Username">
                <div class="label">Username or email address</div>
                <input type="text" data-bind="value: username" />
            </div>
            <div class="form-element" data-name="Password">
                <div class="label">Password</div>
                <input type="password" data-bind="value: password" />
            </div>                                   
            <input type="submit" class="button submit-button" value="Sign-in" />
        </form>
    </div>
</div>

@section Scripts {
    <!-- Scripts -->    
    @Scripts.Render("~/Scripts/ViewModels/Account/SignInViewModel.js")
}